@model List<ApplicationUser>
@{
    ViewData["Title"] = "ListUsers";
}

<h1>ListUsers</h1>

<div>
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Create User</a>
    @if (Model.Any())
    {
        foreach (var user in Model)
        {
            <div class="card">
                <div class="card-header">
                    RoleId: @user.UserName
                </div>
                <div class="card-body">
                    <h5 class="card-title">@user.City</h5>
                    <a asp-action="Edit" asp-controller="Account" asp-route-userId="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-controller="Account" asp-route-userId="@user.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No Users available. To create user click on create button.
            </div>
            <div class="card-body">
                <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Create</a>
            </div>
        </div>
    }
</div>

