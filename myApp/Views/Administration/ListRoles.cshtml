@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "View";
}

<h1>Roles</h1>

<div>
    <a asp-controller="Administration" asp-action="Create" class="btn btn-primary">Create Role</a>
    @if (Model.Any())
    {
        foreach (var role in Model)
        {
            <div class="card">
                <div class="card-header">
                    RoleId: @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                    <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    <form method="post" asp-action="Delete" asp-controller="Administration" asp-route-roleId="@role.Id" class="inline-form">
                        <span id="delteSpan_@role.Id">
                            <a class="btn btn-danger" onclick="confirmDelete('@role.Id', false)">Delete</a>
                        </span>
                        <span id="confirmDeleteSpan_@role.Id" style="display:none">
                            Are you sure you want to delte this role
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a class="btn btn-primary" onclick="confirmDelete('@role.Id', true)">No</a>
                        </span>

                    </form>

                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No Roles available. To create role click on create button.
            </div>
            <div class="card-body">
                <a asp-action="Create" asp-controller="Administration" class="btn btn-primary">Create</a>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script src="~/js/customScript.js"></script>
}
