@model EmployeeViewModel;

@{ 
    ViewBag.Title = "Employee Details";
    var employee = @Model.Employee;
    var photoPath = "~/Images/" + (employee.PhotoPath ?? "images.jpg");
}

<a asp-controller="Employee" asp-action="Index" class="btn btn-dark">Back</a>
<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@photoPath" asp-append-version="true" class="card-img" alt="No image available.">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@employee.Name</h5>
                <p class="card-text">@employee.Salary</p>
                <p>
                    <a asp-controller="Employee" asp-action="Details" asp-rout-id="@employee.Id" class="btn btn-primary">View</a>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-info">Edit</a>
                </p>

            </div>
        </div>
    </div>
</div>

@section Scripts { 
    <script src="~/js/script.js"></script>
}